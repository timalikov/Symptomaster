<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="h1">
        <item name="android:textColor">#669900</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textColor">#669900</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textResults">
        <item name="android:textColor">#600000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textWarning">
        <item name="android:textColor">#600000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textRegular">
        <item name="android:textColor">#4b4b4b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textEmergencyName">
        <item name="android:textColor">#600000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textPhone">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#990000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="textRegularBold">
        <item name="android:textColor">#4b4b4b</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="TableColH">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TableCol">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="symptomChild">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4b4b4b</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="resCauseWrapper">
        <item name="android:background">#990000</item>
    </style>

    <style name="resCauseTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="resCauseText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffff00</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="resRecommendationWrapper">
        <item name="android:background">#AA0000</item>
    </style>

    <style name="resRecommendationTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="resRecommendationText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_remove">
        <item name="android:background">#990000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_learn_more">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#000099</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonBarButton" />

</resources>